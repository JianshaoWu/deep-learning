{
	"name": "DL-Torch",
	"image": "jianshao/torch-dev:cpu",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"remoteEnv": {
		"PYTHONPATH": "."
	},
	"mounts": [
		{"source": "${localEnv:HOME}/.deep-learning", "target": "/home/devel/.deep-learning", "type": "bind"},
		{"source": "${localEnv:HOME}/.keras/datasets", "target": "/home/devel/.keras/datasets", "type": "bind"}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-python.isort",
				"alphabotsec.vscode-eclipse-keybindings"
			]
		}
	}
}
